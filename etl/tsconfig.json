{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": ["*.ts", "*.tsx", "lib/**/*.ts", "loaders/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
